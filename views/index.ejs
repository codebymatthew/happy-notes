<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- FONT ICONS -->
        <script src="https://kit.fontawesome.com/db349aca81.js" crossorigin="anonymous"></script>
        <!-- STYLESHEET -->
        <link rel="stylesheet" href="css/style.css">
        <title>Note App</title>
    </head>
    <body>
        
    <main>
        <section class="creationSection">

            <h1 id="header">Notes</h1>
            
        </section>
        <section id="noteSection">
            <section class="noteArea">
                <section id="createNewNote">
                    <form action="/submit-note" method="POST" id="creationForm">
                        <h2 id="newNote">Create a New Note</h2>
                        <select name="noteColor" id="noteColor" placeholder="Yellow">
                            <option value="Yellow">Yellow</option>
                            <option value="Blue">Blue</option>
                            <option value="Green">Green</option>
                            <option value="Orange">Orange</option>
                            <option value="Purple">Purple</option>
                            <option value="Pink">Pink</option>
        
                        </select>
                        <input type="text" name="noteName" id="noteName" placeholder="Enter Note Name">
                        <textarea cols="40" rows="9" id="noteInfo" name="noteInfo"></textarea>
                        <input type="submit" value="Submit" id="submitNote">
                        
        
                    </form>
        
                </section>
                <% for (let i = 0; i < notes.length; i++) {%>
                    
                    <div class="note">
                        <span class="id"><%= notes[i]._id %></span>
                        <h3 class="nameOfNote"><%= notes[i].noteName %></h3>
                        <span class="color"><%= notes[i].noteColor %></span>
                        <p class="infoOfNote"><%= notes[i].noteInfo %> </p>
                        <span class="edit"><i class="fa-solid fa-pen-to-square"></i></span>
                        <span class='clickMe'><i class="fa-solid fa-trash"></i></span>
                    </div>
                <% } %> 
            </section>
        </section>


    </main>
    <footer>
        <p class="copyright">&copy; <a href='https://github.com/codebymatthew/takeNotes' target="_blank">codebymatthew</a> & <a href='https://github.com/ChrisThompsonDev/takeNotes' target="_blank">ChrisThompsonDev</a>. All rights reserved.</p>
    </footer>






        <script src="js/main.js"></script>
    </body>
</html>